{
  "info": {
    "name": "Municipality Platform - Superadmin API Collection (Corrected)",
    "description": "Dedicated API collection for Superadmin operations with actual endpoints from the codebase",
    "version": "2.1.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{superadmin_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "superadmin_token",
      "value": "",
      "type": "string",
      "description": "Superadmin authentication token"
    },
    {
      "key": "application_id",
      "value": "",
      "type": "string",
      "description": "Project application ID"
    },
    {
      "key": "citizen_id",
      "value": "",
      "type": "string",
      "description": "Citizen user ID"
    },
    {
      "key": "project_id",
      "value": "",
      "type": "string",
      "description": "Project ID"
    },
    {
      "key": "government_id",
      "value": "",
      "type": "string",
      "description": "Government entity ID"
    },
    {
      "key": "approval_id",
      "value": "",
      "type": "string",
      "description": "Registration approval record ID"
    }
  ],
  "item": [
    {
      "name": "üîê Superadmin Authentication",
      "description": "Superadmin login and authentication endpoints",
      "item": [
        {
          "name": "Superadmin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('superadmin_token', response.data.token);",
                  "    console.log('Token saved:', response.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"superadmin@municipality.gov\",\n  \"password\": \"SuperAdmin@2025\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/superadmin/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "superadmin", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "üèõÔ∏è Government Approval Management",
      "description": "Superadmin endpoints for approving/rejecting government registrations",
      "item": [
        {
          "name": "Get All Government Approvals",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/admin/approvals?type=government&status=pending&page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["admin", "approvals"],
              "query": [
                {
                  "key": "type",
                  "value": "government",
                  "description": "Filter by applicant type: government, citizen, project"
                },
                {
                  "key": "status",
                  "value": "pending",
                  "description": "Filter by status: pending, under_review, approved, rejected"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Government Approval Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/admin/approvals/{{approval_id}}",
              "host": ["{{base_url}}"],
              "path": ["admin", "approvals", "{{approval_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "Approve Government Registration",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"decision\": \"approved\",\n  \"reviewNotes\": \"Government entity meets all requirements and documentation is complete\",\n  \"conditions\": []\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/approvals/{{approval_id}}/decision",
              "host": ["{{base_url}}"],
              "path": ["admin", "approvals", "{{approval_id}}", "decision"]
            }
          },
          "response": []
        },
        {
          "name": "Reject Government Registration",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"decision\": \"rejected\",\n  \"reviewNotes\": \"Incomplete documentation provided\",\n  \"rejectionReason\": \"Missing required institutional verification documents\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/approvals/{{approval_id}}/decision",
              "host": ["{{base_url}}"],
              "path": ["admin", "approvals", "{{approval_id}}", "decision"]
            }
          },
          "response": []
        },
        {
          "name": "Add Communication to Government Approval",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Please provide additional documentation for verification\",\n  \"messageType\": \"request_info\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/approvals/{{approval_id}}/communicate",
              "host": ["{{base_url}}"],
              "path": ["admin", "approvals", "{{approval_id}}", "communicate"]
            }
          },
          "response": []
        },
        {
          "name": "Get Approval Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/admin/approvals/stats",
              "host": ["{{base_url}}"],
              "path": ["admin", "approvals", "stats"]
            }
          },
          "response": []
        }
      ]
    },
